<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/backdrop_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="standardText" parent="ExpandedAppBar">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="secondaryText" parent="ExpandedAppBar">
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:textColor">@color/textSecondaryDisabledLight</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
